#include <stdio.h>

int main() {
    // Variáveis
    int numero;
    int pares = 0;
    int impares = 0;

    // Laço para ler 5 números
    for (int i = 1; i <= 5; i++) {
        printf("Informe o %do número inteiro: ", i);
        scanf("%d", &numero);

        // Verifica se o número é par ou ímpar
        if (numero % 2 == 0) {
            pares++;
        } else {
            impares++;
        }
    }

    // Exibe a quantidade de números pares e ímpares
    printf("Quantidade de números pares: %d\n", pares);
    printf("Quantidade de números ímpares: %d\n", impares);

    return 0;
}
