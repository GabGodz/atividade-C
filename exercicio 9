#include <stdio.h>

int main() {
    // Variáveis
    float nota;
    float soma = 0;

    // Laço para solicitar 4 notas
    for (int i = 1; i <= 4; i++) {
        printf("Informe a %da nota: ", i);
        scanf("%f", &nota);

        // Adiciona a nota à soma
        soma += nota;
    }

    // Calcula a média
    float media = soma / 4;

    // Exibe a média
    printf("A média das notas é: %.2f\n", media);

    return 0;
}
